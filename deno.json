{
  "lint": {
    "files": {
      "include": [
        "./"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "files": {
      "include": [
        "./"
      ]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "imports": {
    "cliffy/": "https://deno.land/x/cliffy@v0.25.7/"
  },
  "tasks": {
    "run": "deno run --allow-net=www.omdbapi.com --allow-env=OMDB_API src/cli.ts"
  }
}